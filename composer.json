{
    "name": "tempest/app",
    "require": {
        "tempest/framework": "dev-main",
        "league/commonmark": "^2.4",
        "symfony/yaml": "^6.3",
        "spatie/yaml-front-matter": "^2.0",
        "spatie/browsershot": "^4.0",
        "assertchris/ellison": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "symfony/var-dumper": "^7.1",
        "carthage-software/mago": "^0.19.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Tempest\\": "vendor/brendt/tempest/tests/"
        }
    },
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brendt@stitcher.io"
        }
    ],
    "scripts": {
        "phpunit": "vendor/bin/phpunit --display-warnings --display-skipped --display-deprecations --display-errors --display-notices",
        "mago:fmt": "vendor/bin/mago fmt",
        "mago:lint": "vendor/bin/mago lint --fix && vendor/bin/mago lint",
        "qa": [
            "composer mago:fmt",
            "composer phpunit",
            "composer mago:lint"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "carthage-software/mago": true
        }
    }
}

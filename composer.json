{
    "name": "tempest/app",
    "require": {
        "tempest/framework": "dev-main",
        "league/commonmark": "^2.4",
        "symfony/yaml": "^6.3",
        "spatie/yaml-front-matter": "^2.0",
        "spatie/browsershot": "^4.3",
        "assertchris/ellison": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.21",
        "symfony/var-dumper": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Tempest\\": "vendor/brendt/tempest/tests/"
        }
    },
    "authors": [
        {
            "name": "Brent Roose",
            "email": "brendt@stitcher.io"
        }
    ],
    "scripts": {
        "post-package-update": [
            "php8.3 tempest discovery:generate"
        ],
        "phpunit": "vendor/bin/phpunit --display-warnings --display-skipped --display-deprecations --display-errors --display-notices",
        "csfixer": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "phpstan": "vendor/bin/phpstan analyse app",
        "qa": [
            "composer csfixer",
            "composer phpstan",
            "composer phpunit"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
